<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.usher.entities.mapper.ProductCategoryMapper">

    <resultMap id="BaseResultMap" type="com.usher.entities.ProductCategory">
        <id column="category_id" property="categoryId" jdbcType="INTEGER"></id>
        <id column="category_name" property="categoryName" jdbcType="VARCHAR"></id>
        <id column="category_type" property="categoryType" jdbcType="INTEGER"></id>
    </resultMap>

    <select id="selectByCategoryType" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select category_id,category_name,category_type
        from product_category
        where category_type=#{categoryType,jdbcType=INTEGER}
    </select>

    <select id="selectByCategoryName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select category_id,category_name,category_type
        from product_category
        where category_Name=#{categoryName,jdbcType=VARCHAR}
    </select>

</mapper>